<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="world.mitchmiller.launchcontroller.view.MainActivity">

    <Button
        android:id="@+id/record_vid"
        android:drawableLeft="@drawable/ic_action_videocam"
        android:drawableStart="@drawable/ic_action_videocam"
        android:textColor="@android:color/white"
        android:text="@string/record_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/record_data"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/ic_action_data_recording"
        android:drawableStart="@drawable/ic_action_data_recording"
        android:textColor="@android:color/white"
        android:text="@string/record_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/data_monitor_tv"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="300dp"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>
